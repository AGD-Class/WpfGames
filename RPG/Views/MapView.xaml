<UserControl x:Class="RPG.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RPG.ViewModels"
             xmlns:local="clr-namespace:RPG.Views">
    <UserControl.DataContext>
        <vm:MapViewModel />
    </UserControl.DataContext>
    <Canvas x:Name="GameCanvas" Background="#2b2b2b" Focusable="True">
        <!-- 背景图（示例引用，实际图片请自行替换） -->
        <!--<Image Source="/Resources/Maps/MapBG.jpg" Width="1280" Height="720" Canvas.Left="0" Canvas.Top="0" />-->
        <!-- 主角图像 -->
        <Image x:Name="PlayerImage" Width="64" Height="64"
               Canvas.Left="320" Canvas.Top="320"
               Source="/Resources/Characters/立绘_浊心斯卡蒂_1.png" />
    </Canvas>
</UserControl>
